<!DOCTYPE html>
<html>
<head>
  <title>Amplifyre</title>
  <%= stylesheet_link_tag    'dashboard/index', :media => 'all' %>
  <%= javascript_include_tag 'dashboard/index' %>
  <%= csrf_meta_tags %>
</head>
<body>

  <div class='container-fluid'>

    <div class='navbar'>
      <div class='navbar-inner'>
        <a class='brand'>Amplifyre</a>
        <ul class='nav'>
          <li><%= link_to 'Dashboard', user_root_path %></li>
        </ul>
        <ul class='nav pull-right'>
          <li><%= link_to current_user.email, user_root_path %></li>
          <li class='divider-vertical'></li>
          <li><%= link_to 'Sign out', destroy_user_session_path, :method => :delete %></li>
        </ul>
      </div>
    </div>

    <p class='alert'><%= notice %></p>
    <p class='alert'><%= alert %></p>

    <%= yield %>

  </div>

  <script type="text/javascript">
    var _gaq = _gaq || [];
    _gaq.push(['_setAccount', 'UA-36251718-1']);
    _gaq.push(['_setDomainName', 'amplifyre.com']);
    _gaq.push(['_trackPageview']);
    (function() {
      var ga = document.createElement('script'); ga.type = 'text/javascript'; ga.async = true;
      ga.src = ('https:' == document.location.protocol ? 'https://ssl' : 'http://www') + '.google-analytics.com/ga.js';
      var s = document.getElementsByTagName('script')[0]; s.parentNode.insertBefore(ga, s);
    })();
  </script>

</body>
</html>
