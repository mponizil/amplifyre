<h2><%= t "devise.invitations.new.header" %></h2>

<%= form_for resource, :as => resource_name, :url => band_site_invitation_path, :html => {:method => :post} do |f| %>
  <%= devise_error_messages! %>

  <%= hidden_field :band_site, :id %>

<% resource.class.invite_key_fields.each do |field| -%>
  <p><%= f.label field %><br />
  <%= f.text_field field %></p>
<% end -%>

  <p><%= f.submit t("devise.invitations.new.submit_button") %></p>
<% end %>

<br />

<%= link_to 'Back to Collaborators', band_site_collaborators_path %>

<br />

<%= link_to 'Back to Dashboard', band_site_dashboard_path %>
